<?xml version='1.0' encoding='utf-8'?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "fr.sapk.rak"
        versionCode = "43" 
        version     = "1.0.1" >
    <name>SimpleRAK</name>

    <description>
        Simplement affiche le menu du rak du jour et des suivants.
    </description>

    <author href="https://sapk.fr" email="antoine.girard@sapk.fr">
        Antoine GIRARD 
    </author>

    <icon src="/www/img/logo.png" />
    
    <content src="index.html" />
    
    <plugin name="de.appplant.cordova.plugin.local-notification" />
    <gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.8.1" />
    
    <access origin="*" />
    
    <preference name="permissions" value="none"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
</widget>
