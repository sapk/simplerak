<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "fr.sapk.rak"
        versionCode = "43" 
        version     = "1.0.1" >

    <name>SimpleRAK</name>

    <description>
        Simplement affiche le menu du rak du jour et des suivants.
    </description>

    <author href="https://sapk.fr" email="antoine.girard@sapk.fr">
        Antoine GIRARD 
    </author>

    <icon src="res/img/logo.png" />
    
    <preference name="orienation" value="portrait" />
    <preference name="SplashScreenDelay" value="50" />
    <preference name="permissions" value="none"/>

    <access origin="http://resel.fr" subdomains="true" />
    <access origin="https://services.ard.fr" />
    <access origin="https://scellius.lapostefinance.fr" />
    
    <gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.8.1" />
    
</widget>
